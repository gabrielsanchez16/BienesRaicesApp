extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal Turin  
            h2.text-center.text-2xl.font-extrabold= pagina

            if errores 
                div(class='max-w-md mx-auto my-10')
                    each error in errores
                        p.text-white.bg-red-600.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


            div.mt-8.mx-auto.max-w-md 
                div.bg-white.py-8.px-4.shadow
                    form.space-y-5(method="POST" action="/auth/login" noValidate)
                        input(type="hidden" name="_csrf" value=csrfToken)
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Correo Electronico
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder='Email' type='email' name='email' value= usuario ? usuario.email : '')
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Contrase単a
                            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder='Contrase単a' type='password' name='password')
                        
                        div.flex.items-center.justify-between
                            a.text-gray-500.text-xs(href="/auth/register" class='hover:font-bold') 多No Tienes Cuenta? Crea una Cuenta
                            a.text-gray-500.text-xs(href="/auth/olvide-password" class='hover:font-bold') Olvide mi Contrase単a

                        input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value=`${pagina}`)    