extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal Turin 
            h2.text-center.text-2xl.font-extrabold= pagina

            if errores 
                div(class='max-w-md mx-auto my-10')
                    each error in errores
                        p.text-white.bg-red-600.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

            div.mt-8.mx-auto.max-w-md 
                div.bg-white.py-8.px-4.shadow
                    form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                        input(type="hidden" name="_csrf" value=csrfToken)
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Correo Electronico
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder='Email' type='email' name='email')
                        
                        div.flex.items-center.justify-between
                            a.text-gray-500.text-xs(href="/auth/login" class='hover:font-bold') ¿Ya Tienes Cuenta? Inicia Sesion
                            a.text-gray-500.text-xs(href="/auth/register" class='hover:font-bold') ¿No Tienes Cuenta? Crea una Cuenta

                        input(class="w-full bg-green-700 hover:bg-green-800 text-white font-bold py-3 cursor-pointer" type="submit" value=`Enviar Instrucciones`)    