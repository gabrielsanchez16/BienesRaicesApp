extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal Turin 
            h2.text-center.text-2xl.font-extrabold= pagina

            if errores 
                div(class='max-w-md mx-auto my-10')
                    each error in errores
                        p.text-white.bg-red-600.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

            div.mt-8.mx-auto.max-w-md 
                div.bg-white.py-8.px-4.shadow
                    form.space-y-5(method="POST"  noValidate)
                        input(type="hidden" name="_csrf" value=csrfToken)
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Nueva Contrase単a
                            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder='Nuevo Contrase単a' type='password' name='password')
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repetirPassword') Repetir Contrase単a
                            input#repetirPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder='Repetir Contrase単a' type='password' name='repetirPassword')

                        input(class="w-full bg-green-700 hover:bg-green-800 text-white font-bold py-3 cursor-pointer" type="submit" value=`Guardar Password`)    