extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-green-700 hover:bg-green-800 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver


   

    if mensajes.length  
        div(class="mx-auto max-w-4xl ")
            ul.mb-5 
                each mensaje in mensajes 
                    li(class="border-gray-200 border p-5 space-y-2 mb-5 shadow")
                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-normal")= mensaje.usuarioId

                        p(class="font-bold text-gray-800") mensaje: 
                            span(class="font-normal")= mensaje.mensaje 
                            
                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-normal")= mensaje.createdAt

    else 
        div(class="mx-auto max-w-4xl bg-white shadow") 
            p(class=" text-center text-gray-600 p-5") No Hay Mensajes